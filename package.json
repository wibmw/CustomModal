  "repository": {
    "type": "git",
    "url": "git+https://github.com/wibmw/custom-modal.git"
  },
  "keywords": [
    "modal",
    "custom",
    "react",
    "typescript",
    "awesome",
    "best",
    "fast",
    "lite",
    "popup",
    "window",
    "dialog",
    "simple",
    "easy",
    "alert"
  ],
  "author": "WIBMW",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wibmw/custom-modal/issues"
  },
  "homepage": "https://github.com/wibmw/custom-modal#readme",
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
